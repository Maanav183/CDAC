#include <iostream>
using namespace std;

int main() {
    double distance, fare = 0;
    cout << "Enter distance traveled (in kms): ";
    cin >> distance;

    if (distance <= 1) {
        fare = 25; // Base fare
    } else if (distance <= 6) {
        fare = 25 + ((distance - 1) * 2); // For Next 5 Kms Rs.2 :: 2/5 
    } else if (distance <= 11) {
        fare = 25 + (5 * 2) + ((distance - 6) * 3); // For Next 5 Kms Rs.3 :: 3/5 
    } else {
        fare = 25 + (5 * 2) + (5 * 3) + ((distance - 11) * 4); // For Next 5 Kms Rs.4 :: 4/5 
    }

    cout << "\nTotal fare = Rs. " << fare << endl;

    return 0;
}
