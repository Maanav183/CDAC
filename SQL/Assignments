CREATE TABLE Bank (
bank_id INT PRIMARY KEY,
bank_name VARCHAR(100) NOT NULL,
branch VARCHAR(50),
ifsc_code VARCHAR(20) UNIQUE NOT NULL,
city VARCHAR(50) NOT NULL
);

