CREATE TABLE employee (
id INT PRIMARY KEY NOT NULL,
name VARCHAR(100) NOT NULL,
post VARCHAR(50),
gender VARCHAR(10),
salary INT,
state VARCHAR(50),
district VARCHAR(50),
age INT,
email VARCHAR(100)
);

DESC employee;

