-- task 8
CREATE TABLE students (
student_id INT PRIMARY KEY,
student_name VARCHAR(100) NOT NULL,
email VARCHAR(100) UNIQUE NOT NULL,
age INT,
city VARCHAR(50)
);

CREATE TABLE courses (
course_id INT PRIMARY KEY,
course_name VARCHAR(100) NOT NULL,
duration VARCHAR(50)
);

CREATE TABLE enrollment (
enrollment_id INT PRIMARY KEY,
student_id INT,
course_id INT,
enroll_date DATE,
FOREIGN KEY (student_id) REFERENCES students(student_id),
FOREIGN KEY (course_id) REFERENCES courses(course_id)
);

-- task 10
CREATE TABLE Restaurant2 (
restaurant_id INT PRIMARY KEY,
name VARCHAR(100) NOT NULL,
location VARCHAR(50)
);

INSERT INTO Restaurant2 VALUES
(1, 'Barbeque Nation', 'Mumbai'),
(2, 'Dominos Pizza', 'Delhi'),
(3, 'Mainland China', 'Kolkata');

CREATE TABLE Orders (
order_id INT PRIMARY KEY,
restaurant_id INT,
customer_name VARCHAR(100),
amount DECIMAL(8,2),
order_date DATE,
FOREIGN KEY (restaurant_id) REFERENCES Restaurant(restaurant_id)
);
INSERT INTO Orders VALUES
(101, 1, 'Aarav Mehta', 2500.00, '2025-09-01'),
(102, 2, 'Priya Sharma', 800.00, '2025-09-02'),
(103, 1, 'Rohan Kapoor', 1500.00, '2025-09-03'),
(104, 3, 'Sneha Iyer', 2200.00, '2025-09-04'),
(105, 2, 'Aditya Deshmukh', 1200.00, '2025-09-05');

SELECT r.name AS restaurant_name, o.amount
FROM Orders o
JOIN Restaurant2 r ON o.restaurant_id = r.restaurant_id;

SELECT o.order_id, r.name AS restaurant_name, o.customer_name, o.amount, o.order_date
FROM Orders o
JOIN Restaurant2 r ON o.restaurant_id = r.restaurant_id
WHERE r.location = 'Mumbai';

SELECT r.name AS restaurant_name, SUM(o.amount) AS total_sales
FROM Orders o
JOIN Restaurant2 r ON o.restaurant_id = r.restaurant_id
GROUP BY r.name;

SELECT r.restaurant_id, r.name AS restaurant_name, r.location
FROM Restaurant2 r
LEFT JOIN Orders o ON r.restaurant_id = o.restaurant_id
WHERE o.order_id IS NULL;

SELECT o.customer_name, r.name AS restaurant_name
FROM Orders o
JOIN Restaurant2 r ON o.restaurant_id = r.restaurant_id;

SELECT r.restaurant_id, r.name AS restaurant_name, r.location, o.order_id, o.customer_name, o.amount, o.order_date
FROM Restaurant2 r
JOIN Orders o ON r.restaurant_id = o.restaurant_id;

-- task 11
CREATE TABLE Departments (
dept_id INT PRIMARY KEY,
dept_name VARCHAR(100) NOT NULL
);

CREATE TABLE Employees (
emp_id INT PRIMARY KEY,
emp_name VARCHAR(100) NOT NULL,
dept_id INT,
FOREIGN KEY (dept_id) REFERENCES Departments(dept_id)
);


INSERT INTO Departments VALUES
(1, 'HR'),
(2, 'IT'),
(3, 'Finance'),
(4, 'Marketing');


INSERT INTO Employees VALUES
(101, 'Aarav Mehta', 1),
(102, 'Priya Sharma', 2),
(103, 'Rohan Kapoor', 2),
(104, 'Sneha Iyer', 3),
(105, 'Aditya Deshmukh', NULL), 
(106, 'Kavya Nair', NULL);      


SELECT e.emp_id, e.emp_name, d.dept_name
FROM Employees e
JOIN Departments d ON e.dept_id = d.dept_id;







