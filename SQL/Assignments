-- task 7
CREATE DATABASE projectdb;

CREATE TABLE Company (
company_id INT PRIMARY KEY,
company_name VARCHAR(100) NOT NULL,
industry VARCHAR(50) NOT NULL,
city VARCHAR(50),
employees INT
);

INSERT INTO Company VALUES
